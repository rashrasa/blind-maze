{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },

    "test": {
      "cache": false,
      "persistent": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "compile": {
      "persistent": false,
      "cache": true,
      "inputs": ["src/**"],
      "outputs": ["pkg/**"]
    },
    "start-server": {
      "persistent": true,
      "cache": false
    },
    "test-random-distribution": {
      "persistent": true,
      "cache": false
    }
  }
}
